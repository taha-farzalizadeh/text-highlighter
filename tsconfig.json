{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
